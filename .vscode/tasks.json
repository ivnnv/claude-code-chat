// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: compile",
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "compile-for-debug",
			"dependsOrder": "sequence",
			"dependsOn": ["npm: compile"],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}
