{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "DevServer",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "dev"],
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"env": {
					"FORCE_COLOR": "1"
				}
			},
			"problemMatcher": [
				{
					"owner": "typescript",
					"source": "tsc",
					"applyTo": "closedDocuments",
					"fileLocation": ["relative", "${workspaceFolder}"],
					"pattern": {
						"regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\)\\s*:\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
						"file": 1,
						"location": 2,
						"severity": 3,
						"code": 4,
						"message": 5
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Starting compilation in watch mode\\.|^.*File change detected\\.",
						"endsPattern": "^.*Found \\d+ errors?\\. Watching for file changes\\."
					}
				}
			]
		}
	]
}