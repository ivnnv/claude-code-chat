// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "DebugExt",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "pnpm: dev",
			"sourceMaps": true,
			"env": {
				"VSCODE_DEBUG": "true"
			}
		},
		{
			"name": "DebugExtTD",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"/Users/ivnnv/Sites/ivnnv/tradingdroid-frontends"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "pnpm: clean-compile",
			"sourceMaps": true,
			"env": {
				"VSCODE_DEBUG": "true"
			}
		},
		{
			"name": "Debug Extension (No Watch)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "pnpm: compile",
			"sourceMaps": true
		},
		{
			"name": "Debug Webview (Chrome)",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/src",
			"sourceMaps": true,
			"preLaunchTask": "pnpm: dev",
			"userDataDir": "${workspaceFolder}/.chrome-debug",
			"runtimeArgs": [
				"--remote-debugging-port=9222",
				"--disable-web-security"
			]
		}
	],
	"compounds": [
		{
			"name": "Debug Extension + Webview",
			"configurations": [
				"DebugExt",
				"Debug Webview (Chrome)"
			],
			"stopAll": true
		}
	]
}
