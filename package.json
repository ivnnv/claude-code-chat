{
  "name": "claude-code-sidebar",
  "displayName": "Claude Code Sidebar",
  "description": "Clean, modular Claude Code interface for VS Code - Fork with improved architecture",
  "version": "1.1.0",
  "publisher": "ivnnv",
  "author": "Ivn Nv <ivnnv@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivnnv/claude-code-sidebar"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other",
    "AI",
    "Chat",
    "Machine Learning",
    "Snippets",
    "Programming Languages",
    "Education",
    "Testing",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "claude code",
    "code explanation",
    "code generation",
    "code summary",
    "code transform",
    "vibe coding",
    "prompt language",
    "copilot",
    "claude",
    "ai",
    "assistant",
    "chatbot",
    "chat",
    "anthropic",
    "code",
    "programming",
    "development",
    "productivity"
  ],
  "icon": "icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "claude-code-sidebar.openChat",
        "title": "Open Claude Code Sidebar",
        "category": "Claude Code Sidebar",
        "icon": "icon.svg"
      },
      {
        "command": "claude-code-sidebar.settings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "claude-code-sidebar.history",
        "title": "History",
        "icon": "$(history)"
      },
      {
        "command": "claude-code-sidebar.newChat",
        "title": "New Chat",
        "icon": "$(add)"
      },
      {
        "command": "claude-code-sidebar.statusInfo",
        "title": "Status Info",
        "icon": "$(info)"
      }
    ],
    "keybindings": [
      {
        "command": "claude-code-sidebar.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "claude-code-sidebar.openChat"
        }
      ],
      "editor/context": [
        {
          "command": "claude-code-sidebar.openChat",
          "group": "claude@1",
          "when": "editorTextFocus"
        }
      ],
      "editor/title/context": [
        {
          "command": "claude-code-sidebar.openChat",
          "group": "claude@1"
        }
      ],
      "explorer/context": [
        {
          "command": "claude-code-sidebar.openChat",
          "group": "claude@1"
        }
      ],
      "scm/title": [
        {
          "command": "claude-code-sidebar.openChat",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "claude-code-sidebar.newChat",
          "group": "navigation@1",
          "when": "view == claude-code-sidebar.chat"
        },
        {
          "command": "claude-code-sidebar.history",
          "group": "navigation@2",
          "when": "view == claude-code-sidebar.chat"
        },
        {
          "command": "claude-code-sidebar.statusInfo",
          "group": "navigation@3",
          "when": "view == claude-code-sidebar.chat"
        },
        {
          "command": "claude-code-sidebar.settings",
          "group": "navigation@4",
          "when": "view == claude-code-sidebar.chat"
        }
      ],
      "touchBar": [
        {
          "command": "claude-code-sidebar.openChat",
          "group": "editing",
          "when": "true"
        }
      ],
      "menuBar/file": [
        {
          "command": "claude-code-sidebar.openChat",
          "group": "1_new@1"
        }
      ]
    },
    "views": {
      "claude-code-sidebar": [
        {
          "id": "claude-code-sidebar.chat",
          "type": "webview",
          "name": "",
          "when": "true",
          "icon": "icon.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code-sidebar",
          "title": "Claude Code Sidebar",
          "icon": "icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Claude Code Sidebar",
      "properties": {
        "claudeCodeSidebar.wsl.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable WSL integration for running Claude"
        },
        "claudeCodeSidebar.wsl.distro": {
          "type": "string",
          "default": "Ubuntu",
          "description": "WSL distribution name (e.g., Ubuntu, Debian)"
        },
        "claudeCodeSidebar.wsl.nodePath": {
          "type": "string",
          "default": "/usr/bin/node",
          "description": "Path to Node.js in the WSL distribution"
        },
        "claudeCodeSidebar.wsl.claudePath": {
          "type": "string",
          "default": "/usr/local/bin/claude",
          "description": "Path to Claude executable in the WSL distribution"
        },
        "claudeCodeSidebar.thinking.intensity": {
          "type": "string",
          "enum": [
            "think",
            "think-hard",
            "think-harder",
            "ultrathink"
          ],
          "default": "think",
          "description": "Thinking mode intensity level. Higher levels provide more detailed reasoning but consume more tokens."
        },
        "claudeCodeSidebar.permissions.yoloMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable Yolo Mode to skip all permission checks. Use with caution as Claude can execute any command without asking."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run lint:fix && tsc -p ./ && npm run compile-webview && npm run copy-assets",
    "compile-webview": "npx tsc src/ui-scripts.ts --target ES2022 --lib ES2022,DOM --outFile out/ui-scripts.js --skipLibCheck --module none",
    "copy-assets": "cp src/ui.html out/ui.html && cp src/ui.css out/ui.css",
    "watch": "npm run compile && tsc -watch -p ./",
    "watch-assets": "chokidar 'src/ui.html' 'src/ui.css' -c 'npm run copy-assets'",
    "watch-webview": "npx tsc --watch src/ui-scripts.ts --target ES2022 --lib ES2022,DOM --outFile out/ui-scripts.js --skipLibCheck --module none",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.5.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
